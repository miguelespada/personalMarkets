<!-- This calendar is only for demo -->
<%= stylesheet_link_tag "css/timeline.css" %>
<%= javascript_include_tag "js/jquery-1.3.2.min.js" %>
<%= javascript_include_tag "js/timeline-min.js" %>

<div id="wrap">
  <div id="timeline" class= "calendar">
    <ul>
      <% @markets.each do |market| %>
      <% date = Date.strptime(market.date, "%d/%m/%Y").strftime("%a %b %d %Y") %>
      <%= raw("<li class=\"#{market.name}\" title=\"#{date}\">" + market.description + '</li>') %>
       <% end %>
    </ul>
  </div> 
</div>
