<li id="search_bar">
  <div class="input-group input-group">
    <%= text_field_tag :query, params["query"], placeholder: "Search market", 
    class: "query form-control", id: "search_bar_query" %>
    <span class="input-group-btn">
      <button class="btn btn-default" id="search_button" type="button">
        <i class="fa fa-search"></i>
      </button>
    </span> 
  </div>
</li>

<script>
$( document ).ready(function() {

  $( "#search_bar_query" ).keyup(function() {
    $("#query").val($( "#search_bar_query" ).val());
  });


  $("#query").ready(function(){
    $("#search_bar_query").val($( "#query" ).val());
  })

  $("#search_button").click(function(){
    <% if ((controller_name == 'markets' && action_name == 'search') || (controller_name == 'static_pages' && action_name == 'map')) %>
      $("#search_market").change();
    <% else %>
      $("#search_market").submit();
    <% end %>
  });
  
  $( "#search_bar_query").keypress(function(e) {
    if(e.keyCode == 13 ) {
      e.preventDefault();
      $("#search_button").click();
    }
  });

});
</script>

<style>
  @media (min-width:768px) {
    #search_bar{
      margin-top: 8px;
      width: 200px;
    }
  }
</style>