<!DOCTYPE html>
<html lang="en">

  <%= render "layouts/shared/header" %>

<body>
  <% if flash[:notice] %>
      <div id="notice"><%= flash[:notice] %></div>
  <% end %>

  <% if flash[:error] %>
      <div id="error"><%= flash[:error] %></div>
  <% end %>
  
  <%= render "layouts/shared/navbarhorizontal" %>

  <div class="container">
    <div class="row col-md-3">
      <%= render "layouts/shared/navbarvertical"%>
    </div>
    <div class="row col-md-9">
      <%= yield %>
    </div>
  </div>

  <%= render "layouts/shared/footer" %>

</body>

</html>
