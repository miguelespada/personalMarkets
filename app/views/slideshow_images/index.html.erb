<div class="panel panel-default panel-table">
  <div class="panel-heading table-title">
    Slideshow image <%= link_to content_tag(:i, "", class: "fa fa-plus"), new_slideshow_image_path, class: "new btn btn-info table-button table-button-new"%>
  </div>

  <div class="table-container">
    <table class="table table-striped">
      <tr>
        <th>Image</th>
        <th>Actions</th>
      </tr>
    
      <% @slideshow.each do |slideshow| %>
        <%= content_tag_for(:tr, slideshow) do %> 
          <td class="col-md-4"> 
            <div class="table-photo-container">
               <%= photo(slideshow.photography, 500, 150) %>
            </div>
          </td>


          <td class="col-md-3"> 
            <span> <%= link_to content_tag(:i, "", class: "fa fa-trash-o"), slideshow_image_path(slideshow), :method => :delete, class: "delete btn btn-danger table-button table-button-delete", data: { confirm: 'Are you sure?' } %> </span>
            <span> <%= link_to content_tag(:i, "", class: "fa fa-pencil"), edit_slideshow_image_path(slideshow), class: "edit btn btn-info table-button table-button-edit" %></span>
          </td>
        <% end %>
      <% end %>
    </table>
  </div>
</div>

