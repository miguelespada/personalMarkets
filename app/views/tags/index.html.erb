<div class="panel panel-default panel-table">
  <div class="panel-heading table-title">
    Suggested Tags <%= link_to content_tag(:i, "", class: "fa fa-plus"), new_tag_path, class: "btn btn-info table-button table-button-new"%>
  </div>
  <table class="table table-striped">
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Market Count</th>
      <th>Actions</th>
    </tr>
  
    <% @suggested.each do |tag| %>
      <%= content_tag_for(:tr, tag) do %> 
        <td class="col-md-3"> <%= cl_image_tag(tag.photo.path, :size => '120x60', :crop => :fill) if !tag.photo.nil? %> </td>
        <td class="col-md-3"> <%= link_to(tag.name, tag_markets_path(tag.name)) %> </td> 
        <td class="col-md-3 market-counter"> <%= market_counter(tag.name) %> </td>
        <td class="col-md-3"> 
          <span> <%= link_to content_tag(:i, "", class: "fa fa-trash-o"), tag_path(tag), :method => :delete, class: "btn btn-danger table-button table-button-delete" %> </span>
          <span> <%= link_to content_tag(:i, "", class: "fa fa-pencil"), edit_tag_path(tag), class: "btn btn-info table-button table-button-edit" %></span>
        </td>
      <% end %>
    <% end %>
  </table>
</div>

