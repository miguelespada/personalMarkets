<%= simple_form_for @bargain do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :photo, as: :attachinary %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


<script>
  $( document ).ready(function() {
    $('.attachinary-input').attachinary();
  });
</script>