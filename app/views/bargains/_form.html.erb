<%= simple_form_for @bargain do |f| %>
  <%= f.error_notification %>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= action %> Bargain</h3>
        </div>
        <div class="panel-body">
          <fieldset>
          <div class="form-group">
            <%= f.input :description, input_html: { placeholder: "Bargain Description" }, required: true %>
          </div>
          <div class="form-group">
            <div class="input-group">
              <input class="bargain-price-input form-control" type="text" class="form-control" placeholder="Bargain Price" required>
              <span class="input-group-addon">â‚¬</span>
            </div>
            <div class="hidden">
              <%= f.input :price, input_html: { placeholder: "Bargain Price" }, required: true %>
            </div>
          </div>
          
          <div class="form-group">
            <%= f.simple_fields_for :photography do |form_builder| %>
              <%= render 'photos/form', f: form_builder, required: true %>
            <% end %>
          </div>

          <div class="form-group col-md-4 col-md-offset-4">
            <%= f.button :submit, class:"btn btn-info" %>
          </div>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>


<script>
  $( document ).ready(function() {
    $(".bargain-price-input").val($("#bargain_price").val());
    $(".bargain-price-input").change(function(){
      $("#bargain_price").val($(".bargain-price-input").val());
    });
  });
</script>