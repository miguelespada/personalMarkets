<div class="panel panel-default panel-table panel-table-last">
  <div class="panel-heading table-title">
    Bargains <%= link_to content_tag(:i, "", class: "fa fa-plus"), new_bargain_path, 
      class: "btn btn-info table-button table-button-new new"%>
  </div>
  <table class="table table-striped">
    <tr>
      <th>Photo</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  
    <% @bargains.each do |bargain| %>
      <%= content_tag_for(:tr, bargain) do %> 
        <td class="col-md-4"> <%= cl_image_tag(bargain.photo.path, :size => '120x60', :crop => :fill) if !bargain.photo.nil? %> </td>
        <td class="col-md-4"> <%= bargain.description %> </td>
        <td class="col-md-4"> 
          <span> <%= link_to content_tag(:i, "", class: "fa fa-trash-o"), bargain, :method => :delete, class: "delete btn btn-danger table-button table-button-delete" %> </span>
          <span> <%= link_to content_tag(:i, "", class: "fa fa-pencil"), edit_bargain_path(bargain), class: "edit btn btn-info table-button table-button-edit" %></span> 
        </td>
      <% end %>
    <% end %>
  </table>
</div>


<script>
  $(document).ready(function(){
    buttonHover(".table-button-new", "fa-plus", "New Bargain", 135);
    buttonHover(".table-button-delete", "fa-trash-o", "Delete", 85);
    buttonHover(".table-button-edit", "fa-pencil", "Edit", 70);
  });
  
  var buttonHover = function(button, icon, text, width){
    $(button).hover(function(){
      $(this).html("<i class='fa " + icon + "'></i>&nbsp;&nbsp;" + text);
      $(this).animate({
        width: width
      }, 100);
    }, function(){
      $(this).html("<i class='fa " + icon + "'></i>");
      $(this).animate({
        width: "40"
      }, 100);
    });
  };
</script>