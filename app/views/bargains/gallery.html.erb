<%= page_title(t(:bargains).capitalize, Bargain.icon) %>

<% if current_user  %>
  <div class = "center">  
    <%= link_to new_bargain_path, class: "btn btn-default" do %>
      <i class="fa fa-plus"></i> <%= t :new_bargain %>
    <% end %>
  </div>
<% end %>

<div class="paginate">
  <%= paginate @bargains %>
</div>

<% if @bargains != [] %>
  <% @bargains.each do |bargain| %>
    <%= render "bargains/show", :bargain => bargain %>
  <% end %>
<% else %>
 <h1> <%= t(:no_bargains) %> :( </h1>
<% end %>