<%= page_title(t(:contact_us).capitalize, "fa-envelope-o") %>

<%= simple_form_for(@contact, :url => contact_path(@contact)) do |f| %>
  <%= f.error_notification %>
  <div class="container main-container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= t(:contact_form) %></h3>
          </div>
          <div class="panel-body">
            <fieldset>
              <div class="form-group">
                <%= f.input :name, :placeholder => t(:name).capitalize, :required => true, :autofocus => true %>
                <p id="tags-container"></p>
              </div>
              <div class="form-group">
                <%= f.input :email, :placeholder => t(:email).capitalize, :required => true %>
              </div>
              <div class="form-group">
                <%= f.input :subject, :placeholder => t(:subject).capitalize, :required => true %>
              </div>
              <div class="form-group">
                <%= f.input :description, :placeholder => t(:your_message), :required => true, :as => :text, :input_html => { :rows => 5 } %>
              </div>
              <div class="form-group col-md-4 col-md-offset-4">
                <%= f.button :submit, t(:send).capitalize %>
              </div>
            </fieldset>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>