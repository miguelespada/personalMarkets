<%= page_title(t(:change_your_password), "fa-cog") %>

<div class = "col-md-4 col-md-offset-4">
  <%= simple_form_for(resource, :as => resource_name, 
      :url => password_path(resource_name), :html => { :method => :put }) do |f| %>

    <%= f.error_notification %>

    <%= f.input :reset_password_token, :as => :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs change-password-inputs">
      <%= f.input :password, :label => t(:new_password), :required => true, :autofocus => true %>
      <%= f.input :password_confirmation, :label => t(:confirm_your_new_password), :required => true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t(:change_my_password) %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
