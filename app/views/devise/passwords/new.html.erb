

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= f.error_notification class: 'alert-danger flash'%>
  
<div class = "home_gallery_title"><i class="fa fa-question fa-2x"></i> <br/>Forgot your password?</div>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Password Recovery</h3>
        </div>
        <div class="panel-body">
          <form accept-charset="UTF-8" role="form">
            <fieldset>
            <div class="form-group">
              <%= f.input :email, :required => true, :autofocus => true %>
            </div>
            <div class="form-group col-md-4 col-md-offset-4">
              <%= f.button :submit, "Reset my password" %>
            </div>
            <div class="form-group col-md-4 col-md-offset-4">
              <span style="display: block; margin: 0px auto; text-align: center;" >or</span>
            </div>
            <div class="form-group col-md-4 col-md-offset-4">
              <%= link_to "Sign up", new_registration_path(resource_name), :class=>  "btn btn-primary btn-block"%>
            </div>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
