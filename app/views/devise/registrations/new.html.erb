<%= page_title(t(:registration), "fa-sign-in") %>

<%= simple_form_for(resource, html: {:id => "sign-up-form"}, 
  :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification class: 'alert-danger flash'%>

  <div class="container user-session main-container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= t :sign_up %></h3>
          </div>

          <div class="panel-body">
            <fieldset>
              <div class="form-group">
                <%= f.input :email, :required => true, :autofocus => true %>
              </div>

              <div class="form-group">
                <%= f.input :password, :required => true %>
                <p id="tags-container"></p>
              </div>

              <div class="form-group">
                <%= f.input :password_confirmation, :required => true %>
              </div>

              <div class="form-group col-md-4 col-md-offset-4">
                <%= f.button :submit, t(:sign_up).capitalize %>
              </div>

              <div class="form-group col-md-4 col-md-offset-4">
                <span style="display: block; margin: 0px auto; text-align: center;" >
                  <%= t(:or) %>
                </span>
              </div>

              <div class="form-group col-md-4 col-md-offset-4">
                <%= button_to t(:sign_up_with_google), user_omniauth_authorize_path(:google_oauth2), :class=>  "btn btn-primary btn-block"%>
                <%= button_to t(:sign_up_with_facebook), user_omniauth_authorize_path(:facebook), :class=>  "btn btn-primary btn-block" %>
              </div> 
            </fieldset>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>