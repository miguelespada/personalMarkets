<div class = "home_gallery_title"><i class="fa fa-sign-in fa-2x"></i> <br/>Registration</div>

<%= simple_form_for(resource, html: {:id => "sign-up-form"}, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

<div class="container user-session">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Sign Up</h3>
        </div>
        <div class="panel-body">
            <fieldset>
            <div class="form-group">
              <%= f.input :email, :required => true, :autofocus => true %>
            </div>
            <div class="form-group">
              <%= f.input :password, :required => true %>
              <p id="tags-container"></p>
            </div>
            <div class="form-group">
              <%= f.input :password_confirmation, :required => true %>
            </div>
            <div class="form-group col-md-4 col-md-offset-4">
              <%= f.button :submit, "Sign up" %>
            </div>
            <div class="form-group col-md-4 col-md-offset-4">
              <span style="display: block; margin: 0px auto; text-align: center;" >or</span>
            </div>
            <div class="form-group col-md-4 col-md-offset-4">
              <%= button_to "Sign up with Google", user_omniauth_authorize_path(:google_oauth2), :class=>  "btn btn-primary btn-block"%>
              <%= button_to "Sign up with Facebook", user_omniauth_authorize_path(:facebook), :class=>  "btn btn-primary btn-block" %>
            </div>

            </fieldset>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>