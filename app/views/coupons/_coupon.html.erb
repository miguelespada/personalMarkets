<% if !coupon.empty? %>
  <%= div_for coupon do %>
    <span> Market: </span> <span> <%= link_to coupon.market.name, market_path(coupon.market) %> </span> <br>
    <span> Coupon Description: </span>  <span> <%= coupon.description %> </span> <br>
    <span> Coupon Price </span>  <span> <%= coupon.price %> </span> <br>
    <span> Available</span> <span> <%= coupon.available %> </span>
  <% end %>
<% else %>
  <%= "Remember to create a coupon to offer extra services in your market" if coupon.market.pro? %>
  <%= "Upgrade your market to offer coupons" if !coupon.market.pro? %>
<% end %>