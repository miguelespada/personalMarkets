<div class="row">
  <div class="col-md-4 col-md-offset-1">  
      <%= photo(coupon.photography, 300) %>
      <%= edit_photo_link(coupon.photography) %>
  </div>
  <div class="col-md-6 col-md-offset-1">

      <%= render "coupons/views/description", coupon: coupon %>
    <strong> <%= t :Available %>: </strong> <span> <%= coupon.available %> </span> <br>
  
    <% if buy %>
      <%= render "coupons/forms/buy_coupon", coupon: @coupon %>
    <% else %>
      <%= coupon.market.decorate.buy_coupon_link %>
    <% end %>

  </div>
</div>
  