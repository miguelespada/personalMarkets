<%= page_title(t(:payment_details), Coupon.icon) %>

<div class="container main-container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= render "coupons/views/description", coupon: @coupon %>
          <strong> <%= t(:number_of_coupons) %>: </strong>  
          <span> <%= @coupon_payment.quantity %> </span> 
          <br>
          <strong>  <%= t(:total) %>: </strong>  
          <span> <%= (@coupon_payment.payment.total_price/100).round(2) %> â‚¬ </span> 
          <p> <%= t(:coupon_rules_buyer) %> </p>
          <p class="payment-errors"></p>
        </div>

        <div class="panel-body">
          <fieldset>
            <%= form_tag({controller: "coupons", action: "buy"}, method: "post", id: "new_payment") do %>
              <%= hidden_field_tag "id", "#{@coupon_payment.coupon.id}" %>
              <%= render "payments/common_payment_form", :payment => @coupon_payment.payment %>
            <% end %>
            <div class="form-group col-md-4 col-md-offset-4 payment-button-container">
              <button class="get-token btn btn-info"><%= t(:pay).capitalize %></button>
            </div>
          </fieldset>
        </div>
      </div>
    </div>
  </div>

  <div class = "center">
    <%= back_link %>
  </div>

</div>
