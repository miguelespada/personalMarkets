<div class="terms-title" ><i class="fa fa-ticket fa-3x"></i><br> Buy Coupon </div>

<div class="main-container">
  <div class="row">

    <div class="col-md-8 col-md-offset-2">
      <h4> <%= t :shopping_details %>:</h4>
      <strong> <%= t :Description %>: </strong>  <span> <%= coupon_payment.coupon.description %> </span> <br>
      <strong> <%= t :Price %>: </strong>  <span> <%= coupon_payment.coupon.price %> - € </span> <br>
      <strong> <%= t :Number_of_coupons %>: </strong>  <span> <%= coupon_payment.quantity %> </span> <br>
      <strong>  <%= t :Total %>: </strong>  <span> <%= coupon_payment.coupon.price *  coupon_payment.quantity %> - € </span> <br> <br>
      
    </div>
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Coupon Payment</h3>
          <p class="payment-errors"></p>
        </div>
        <div class="panel-body">
          <fieldset>
          <%= form_tag({controller: "coupons", action: "buy"}, method: "post", id: "new_payment") do %>
          <%= hidden_field_tag "id", "#{coupon_payment.coupon.id}" %>

          <%= render "payments/common_payment_form", :payment => coupon_payment.payment %>

          <% end %>
          <div class="form-group col-md-4 col-md-offset-4 payment-button-container">
            <button class="get-token btn btn-info">Pay</button>
          </div>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
</div>


<%=  back_link %>