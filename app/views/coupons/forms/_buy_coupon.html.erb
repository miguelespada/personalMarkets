<div class = "row">
  <div class = "col-md-8">
  <% if coupon.available > 0 %>
    <div id = "buy-coupon-action">
      <strong> <%= t(:how_many_coupons_would_you_like_to_buy) %> </strong>
      <%= form_tag({controller: "coupons", action: "coupon_payment"}, method: "post") do %>
      <%= select_tag "number", options_for_select((1..coupon.available)), class:"form-control"  %>
      <p>
        <br>
        <input type="checkbox" required name="premium_accept_term" id="premium_accept_term" > <%= t(:i_accept_the) %> <%= link_to t(:terms_of_use), buy_coupon_terms_path %>
      </p>
      <div class="col-md-4 col-md-offset-1">
        <%= submit_tag t(:buy).capitalize, class:"btn btn-info coupon-buy-button" %>
      </div>
    </div>
  <% end %>
  <% else %>
    <div class="center">
     <h1> <%= t(:this_coupon_is_sold_out) %> </h1>
    </div>
  <% end %>
    </div>
</div>

<style>
#number{
  margin-top: 20px;
  width: 20% !important;
}
</style>