<div class = "row">
  <% @special_locations.each do |special_location| %>
      <div class = "gallery_item col-md-3">
        <div class = "center" data-name="<%= special_location.name %>">
          <%=  photo(special_location.photography, 250) %>
          <div class = "gallery_label special_location_label">
            <span>
              <%= link_to map_path(location: special_location.name) do %>
                <%=  special_location.name %>
              <% end %>
            </span>
          </div>
        </div>
      </div>
  <% end %>
</div>