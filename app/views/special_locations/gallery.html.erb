<div class = "home_gallery wish_gallery">
  <% @wishes.each do |wish| %>
    <% if !wish.wish_photo.nil? %>
      <div class = "home_gallery_item wish_item">
        <div class = "home_gallery_featured_photo wish_featured_photo" data-name="<%= wish.description %>">
          <%= cl_image_tag(special_location.photo.path, :size => '300x150', :crop => :fill) %>
          <div class = "home_gallery_label special_location_label">
            <%= special_location.name %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>


<script>
$( document ).ready(function() {
  $('.special_location_featured_photo').css('cursor', 'pointer');

  $(".special_location_featured_photo").click(function(){
    $("#location_location_id").val($(this).data("name"));
    $("#search_market").submit();
  });
});
</script>

