<%= javascript_include_tag "tagmanager" %>
<%= stylesheet_link_tag  "tagmanager" %>

<% if !current_user.too_many_wishes? %>
  <%= form(@wish) %>
  
  <script>
    $( document ).ready(function() {
      jQuery(".tm-input").tagsManager({
        prefilled: $( "#wish_tags" ).val(),
        delimiters: [9, 13, 44],
        tagClass: "tm-tag",
        tagsContainer: '#tags-container'
      });
    });
  </script>

<% else %>
  <div class="creation-not-allowed">
    <%= too_many_wishes_message(current_user) %>
  </div>
  <div class="center">
    <%= back_link %>
  </div>
<% end %>