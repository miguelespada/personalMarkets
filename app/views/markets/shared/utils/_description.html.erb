
<%= market.market_like_count %> <br> 
<strong>  Decription</strong> <%= market.direct_edit_link("form-market-description") %>:<%= market.description %> <br> 
<strong> Category</strong> <%= market.direct_edit_link("form-market-category-tag") %>: <%= market.category_name %> <br>

<% if cannot? :edit, market %>
  <strong> Owner: </strong> <%= link_to market.owner, user_markets_path(market.user) %> <br>
<% end %>

<strong> Prices </strong><%= market.direct_edit_link("form-market-prices") %>: <%= market.min_price %> € - <%= market.max_price %> € <br>
<strong> <%= t :tags %> </strong><%= market.direct_edit_link("form-market-date") %> : <%= market.hashtags %> <br>
<strong> Address </strong><%= market.direct_edit_link("form-market-location") %>: <%= market.address %>, <%= market.city %> <br>
<!-- <strong> Date: </strong> <%= market.date %> <br> -->
<strong> <%= t "Schedule" %>  <span class:"market-schedule-string"> </strong> <%= market.direct_edit_link("form-market-category-tag") %>:</span><br>
<% market.human_readable_schedule.each do |day| %> 
    <%= format_date(day) %> </br> 
<% end %>
<strong> <%= t "External url" %></strong> <%= market.direct_edit_link("form-market-external-url") %>: <a href="<%=  market.url %>" target="_blank"><%=  market.url %></a> <br>
<strong> <%= t "Social link" %></strong> <%= market.direct_edit_link("form-market-external-url") %>:   <a href="<%=  market.social_link %>" target="_blank"><%=  market.social_link %></a> <br>

<div class="hidden">
  <%= market.latitude %>
  <%= market.longitude %> 
</div>

<script>
  $(document).ready(function(){
    var scheduleString = $(".market-schedule-string").text();
    var scheduleItems = scheduleString.split(";");
    $.each(scheduleItems, function(i, val){
        valArray = val.split(",");
        scheduleItems[i] = valArray[0]+", "+valArray[1]+" to "+valArray[2];
    });
      $(".market-schedule-detail").html(scheduleItems.join("<br>"));
  });
</script>