<%= link_to content_tag(:i, "", class: "fa fa-twitter"), market.twitter_text, class: "btn btn-info btn-market-action-bar" %>
<%= link_to content_tag(:i, "", class: "fa fa-facebook"), market.facebook_text, class: "btn btn-primary btn-market-action-bar" %>
<%= link_to content_tag(:i, "", class: "fa fa-pinterest"), market.pinterest_text, class: "btn btn-danger btn-market-action-bar" if market.featured.present? %>
<%= link_to content_tag(:i, "", class: "fa fa-google-plus"), market.google_text, class: "btn btn-success btn-market-action-bar" %>