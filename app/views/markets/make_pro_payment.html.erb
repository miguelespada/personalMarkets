<div class = "home_gallery_title"><i class="fa fa-credit-card fa-2x"></i> <br/>Go Pro</div>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Make PRO Payment</h3>
        </div>
        <div class="panel-body">
          <fieldset>
          <div class="form-group payment-form">
          <%= form_tag({controller: "markets", action: "make_pro"}, method: "post", id: "new_payment") do %>
          <%= hidden_field_tag "id", "#{@pro_payment.market.public_id}" %>

          <%= render "payments/common_payment_form", :payment => @pro_payment.payment %>

          <% end %>
          </div>
          <div class="form-group col-md-4 col-md-offset-4">
            <button class="get-token btn btn-info">Pay</button>
          </div>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
</div>

<%= back_link %>

