<%= page_title(t(:go_VIM), "fa-plus-square") %>

<div class="container">
  <div class="row">
    <div class="pricing-table">
      <div class="plan col-md-4 col-md-offset-1">
        <div class="plan-name-premium">
          <h2>Very Important Market (VIM)</h2>
          <span>2.95â‚¬</span>
        </div>
        <ul>
          <% t(:vim_features).each do |feature| %>
            <li class="plan-feature"><span class="fa fa-check-circle"></span> <%= feature %> </li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-sm-6 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-body">
            <fieldset>
              <%= form_tag({controller: "markets", action: "make_pro"}, method: "post", id: "new_payment") do %>
                
                <%= hidden_field_tag "id", "#{@pro_payment.market.public_id}" %>

                <%= render "payments/common_payment_form", :payment => @pro_payment.payment %>

                <p>
                  <input type="checkbox" required name="premium_accept_term" id="accept_terms" > 
                  <%= t(:i_accept_the) %> <%= link_to t(:terms_of_use) + ".", go_vim_terms_path %>
                </p>

              <% end %>
              <div class="form-group col-md-4 col-md-offset-4 payment-button-container">
                <button class="get-token btn btn-info"><%= t(:pay).capitalize %> </button>
              </div>
            </fieldset>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="center">
  <%= back_link %>
</div>