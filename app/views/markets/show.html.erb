<% market = @market.decorate %>

<div class="panel panel-default panel-table panel-table-last">
  <div class="panel-heading table-title">
    <div class="market-title-container">
      <div class="market-title col-md-6"><%= market.name %></div>
      <div class="market-actions col-md-6">
        <%= market.edit_link %>
        <%= market.delete_link %>
        <%= market.like_link %>
        <%= market.publish_link %>
        <%= market.unpublish_link %>
        <%= market.archive_link %>
        <%= market.pro_link %>
      </div>
    </div>
  </div>

  <div class="market-section-title">General Information</div>
  <div class="market-section-container">
    <div class="col-md-4 market-featured-photo">
      <%= photo(market.featured, 300, 300) %>
    </div>
  
    <div class="market-data col-md-4">
      <h4 class="market-description"> <%=  market.description %> </h4>
      <h5 class="market-category"> <%= market.category.name %> </h5>
      <h6 class="market-tags"> <%= market.tags %> </h6> 
      <h6 class="market-date">  <%= market.date %> </h6> 
      <h6 class="market-address"> <%= market.address %> </h6>
      <h6 class="market-city"> <%= market.city %> </h6>
      
    </div>
  </div>

  <div class="market-section-title">Gallery</div>
  <div class="market-section-container">
    <div class="market-photos">
        <% market.photos.each do |photo| %>
          <%= photo(photo, 200, 100) %>
        <% end %>
      </div>
  </div>

  <div class="market-section-title">Coupons</div>
  <div class="market-section-container">
    <%= market.coupon_section %>
  </div>

  <div class="market-section-title">Location</div>
  <div class="market-section-container">
    <%= market.location %>
  </div>

  <div class="market-section-title">Comment & Share</div>
  <div class="market-section-container">
    <div class="market-likes-number"> Number of likes: <%= market.favorited.count %> </div>
      <div class="market-likes"> Liked by <%= likes(market) %> </div>
      <div class="social"> 
        <div id="fb-root"></div>
          <script>(function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
            fjs.parentNode.insertBefore(js, fjs);
          }(document, 'script', 'facebook-jssdk'));
          </script>
      
          <div class="fb-comments" data-href=<%=market_url(market.to_param)%> data-numposts="5" data-colorscheme="light"></div>
          <div class="fb-like" data-href=<%=market_url(market.to_param)%> data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
        </div>
        <%= link_to "tweet me", "http://twitter.com/home?status=#{market.name} #{market.description} #{market_url(market)}" %>
      </div>
  </div>

<style>
@media (max-width: 992px){
  .market-actions{
    text-align: left;
  }
}
</style>

