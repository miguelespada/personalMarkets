<% market = market.decorate %>

<%= content_tag_for :div, market do %>
    <div> <%= market.name %> </div>
    <div class="featured-photo"> <%= market.featured_photo(image_size) %></div>
    <div> <%= market.description %> </div>
    <div class = "market-latitude"> <%= market.longitude %> </div>
    <div> <%= market.latitude %> </div>
    <div> <%= market.category.name %> </div>  
    <div> <%= market.tags %> </div> 
    <div class = "market-user-email"> <%= market.user.email %> </div>
    <div> <%= market.show_link %> </div>
    <div> <%= market.edit_link %> </div>
    <div> <%= market.delete_link %> </div>
    <div> <%= market.like_link %>  </div>
<% end %>