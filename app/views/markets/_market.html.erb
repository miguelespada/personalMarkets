<div class="market-thumbnail">
  <div class="market-name"> <%= market.name %> </div>
  <div class="market-featured-photo"> <%= market.featured_photo(image_size) %></div>
  <div class="market-description"> <%=  market.description %> </div>

  <div class="market-actions">
    <%= market.show_link %>
    <%= market.edit_link %>
    <%= market.delete_link %>
    <%= market.like_link %>
  </div>
</div>

<div class="market-meta">
  <div class="market-category"> <%= market.category.name %> </div>
  <div class="market-tags"> <%= market.tags %> </div> 
</div>

<div class="market-info">
  <div class="market-user-email"> <%= market.user.email %> </div>
  <div class="market-address"> <%= market.address %> </div>
  <div class="market-longitude"> <%= market.longitude %> </div>
  <div class="market-latitude"> <%= market.latitude %> </div>
  <div class="market-date"> <%= market.date %> </div>
</div>

<div class="market-stats">
  <div class="market-likes-number"> Likes: <%= market.favorited.count %> </div>
  <div class="market-likes"> Liked by <%= likes(market) %> </div>
</div>

<div class="market-widgets">
  <div class="market-calendar"> Set Calendar for: <%= market.name %> on <%= market.date %> </div>
  <div class="market-qr-link"> <%= market.qr_code_link %> </div>
</div>
