
<%= simple_form_for(@slideshow_text) do |f| %>
  <%= f.error_notification %>

  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= action %> Slideshow Text</h3>
          </div>
          <div class="panel-body">
            <fieldset>

              <div class="form-group">
              <%= f.input :title, input_html: { placeholder: "Title", :required => true } %>
              </div>
            

               <div class="form-group">
              <%= f.input :subtitle, input_html: { placeholder: "Subtitle", :required => true } %>
              </div>

              <div class="form-group">
                <%= f.input :title_en, input_html: { placeholder: "Title in english...", :required => true } %>
              </div>
              <div class="form-group">
                <%= f.input :subtitle_en, input_html: { placeholder: "Subtitle  in english...", :required => true } %>
              </div>

         
            <div class="form-group col-md-4 col-md-offset-4">
              <%= f.button :submit, class:"btn btn-info" %>
            </div>
            </fieldset>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

