<div class = "home_gallery category_gallery row">
  <% @categories.each do |category| %>
      <div class = "home_gallery_item category_gallery_item col-md-3">
        <div class = "category_gallery_featured_photo center" data-name="<%= category.slug %>">
          <%= cl_image_tag(category.glyph_img.path, :width => 100, :height => 100, :crop => :fill) %>
          <p>
            <%= intl_name(category) %>
          </p>
        </div>
      </div>
  <% end %>
</div>

<script>
$( document ).ready(function() {
  $('.category_gallery_featured_photo').css('cursor', 'pointer');

  $(".category_gallery_featured_photo").click(function(){
    $("#category_category_id").val($(this).data("name"));
    $("#search_market").submit();
  });
});
</script>

<style>
.category_gallery_item p{
  color:#999;
  padding-top: 10px;
};

</style>