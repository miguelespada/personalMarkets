<div class="panel panel-default panel-table panel-table-last">

  <div class="panel-heading table-title">
    <%= t(:categories).capitalize %>
  </div>

  <div class = "row category-gallery">
    <% @categories.each do |category| %>
      <div class = "item">
        <div class = "photo center" data-name="<%= category.slug %>">
          <%= cl_image_tag(category.glyph_img.path, 
            :width => 50, :height => 50, :crop => :fill) if category.glyph_img.present? %>
        </div>
        <div class="center">
          <%= intl_name(category) %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
$( document ).ready(function() {
  $(".category-gallery .item .photo").click(function(){
    $("#category_category_id").val($(this).data("name"));
    $("#search_market").submit();
  });
});
</script>
