<h3>Categories</h3>

<% @categories.each do |category| %>
  <li class = "category"> <span> <%= category.name %> </span> 
  <span class = "market-counter"> <%= category.markets.count %> </span>
  <span> <%= link_to "Delete", category_path(category), :method => :delete %> </span>
   </li>   
<% end %>

