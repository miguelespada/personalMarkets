<div class="container">
	<div class="row">
		<div class="pricing-table">

			<div class="plan col-sm-6">
				<div class="plan-name-basic">
					<h2>Regular Plan</h2>
					<span>Free</span>
				</div>
				<ul>
				<li class="plan-feature"><span class="glyphicon glyphicon-ok green-check"></span> 1 mercado / mes</li>
				</ul>
			</div>

			<div class="plan col-sm-6">
				<div class="plan-name-premium">
					<h2>Pro Plan</h2>
					<span>4.99€ / Month</span>
				</div>
				<ul>
				<li class="plan-feature"><span class="glyphicon glyphicon-ok green-check"></span> 4 mercados por mes </li>
	            <li class="plan-feature"><span class="glyphicon glyphicon-ok green-check"></span> Todos tus mercados son VIM </li>
	            <li class="plan-feature"><span class="glyphicon glyphicon-ok green-check"></span> Estadisticas de tus mercados a tiempo real</li>
	            <li class="plan-feature"><span class="glyphicon glyphicon-ok green-check"></span> Creación de cupones</li>
	            <li class="plan-feature"><span class="glyphicon glyphicon-ok green-check"></span> Unsubscribirte en un solo click</li>
	          <form>
	            <p><input type="checkbox" required name="premium_accept_term" id="premium_accept_term" > I accept the <%= link_to "terms of use.", go_premium_terms_path %></p>
							<%= button_to "Become premium", user_subscription_path(@user), { method: :get, class:"btn btn-info become-premium-button" } %>
						</form>
				</ul>
			</div>
	    </div>
    </div>
</div>
