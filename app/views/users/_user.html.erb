<%= content_tag_for(:tr, user) do %>
    <td> <%= user.email %> </td>
    <td> <%= user.status.titleize %> </td>
    <td> <%= user.markets.count %></td>
    <td> <%= user.favorites.count %></td>
    <td> <%= link_to "Show", user_path(user), :method => :get %> |
         <%= link_to "Change role", change_user_role_path(user), :method => :get %> |

         <% user.available_statuses.each do |status| %>
            <%= link_to "Switch to " + status.titleize, user_status_path(user, :new_status => status), :method => :put %> |
         <% end %>
         <%= link_to "Delete", user_path(user), :method => :delete %></td>
<% end %>