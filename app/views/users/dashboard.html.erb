<%-# ICONS LINKS ARE NOT DEFINED -%>

<div class ="home_gallery_title"><i class="fa fa-dashboard fa-5x"></i> <br/>Dashboard<br><%= user_role(current_user) %></div>

  <div class="panel-body">

    <div class="center">
        <p>You have published: <%= current_user.number_of_last_month_markets %> market(s) during the last month</p>
        <p>You can publish: <%= current_user.remaining_markets  %> market(s)</p>
    <div>
    <div class="row">
      <div class="col-md-6 dashboard-column">
        <%= link_to user_markets_path(current_user), class:"dashboard-button btn btn-danger btn-lg" do %>
			    <i class="fa fa-shopping-cart fa-4x"></i> <br/> Markets
		    <% end %>
        <%= link_to user_likes_path(current_user), class:"dashboard-button btn btn-warning btn-lg" do %>
          <i class="fa fa-heart-o fa-4x"></i> <br/> Likes
        <% end %>
        <%= link_to user_bargains_path(current_user), class:"dashboard-button btn btn-success btn-lg" do %>
          <i class="fa fa-bullhorn fa-4x"></i> <br/> Bargains
        <% end %>
		    <%= link_to user_wishes_path(current_user), class:"dashboard-button btn btn-info btn-lg" do %>
			    <i class="fa fa-magic fa-4x"></i> <br/> Wishlist
		    <% end %>
      </div>

      <div class="col-md-6 dashboard-column">   
        <%= link_to bought_coupons_by_user_path(current_user), class:"dashboard-button btn btn-primary btn-lg" do %>
          <i class="fa fa-ticket fa-4x"></i> <br/> Coupons
        <% end %>
        <%= link_to user_path(current_user), :method => :get, class:"dashboard-button btn btn-primary btn-lg" do %>
			    <i class="fa fa-user fa-4x"></i> <br/> Profile
		    <% end %>

        <%= link_to user_photos_path(current_user), class:"dashboard-button btn btn-primary btn-lg" do %>
          <i class="fa fa-camera fa-4x"></i> <br/> Photos
        <% end %>
        
        <% if current_user.has_role?(:premium) %>
          <%= link_to show_user_statistic_path(current_user), class:"dashboard-button btn btn-primary btn-lg" do %>
            <i class="fa fa-tasks fa-4x"></i> <br/> Statistics
          <% end %>
        <% end %>

      </div>
    </div>
  </div>
</div>